{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Xbim": {
    "Standalone": {
      "Theme": {
        "InitialTheme": "Dark",
        "LightAccentColor": "#0969da",
        "DarkAccentColor": "#1e7e34",
        "LightBackgroundColor": "#ffffff",
        "DarkBackgroundColor": "#404040"
      },
      "FileLoaderPanel": {
        "AllowIfcFiles": true,
        "AllowCustomHeaders": true,
        "AutoCloseOnLoad": true,
        "DemoModels": [
          {
            "Name": "Four Walls (WexBIM)",
            "Path": "models/FourWalls.wexbim",
            "Description": "A simple four walls model in WexBIM format"
          },
          {
            "Name": "Sample House (IFC)",
            "Path": "models/SampleHouse.ifc",
            "Description": "A sample house model in IFC format (requires processing)"
          }
        ]
      }
    }
  }
}
